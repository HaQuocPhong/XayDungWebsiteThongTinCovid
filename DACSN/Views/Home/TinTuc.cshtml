
@{ ViewBag.Title = "Tin Tức";
                Layout = "~/Views/Shared/_LayoutUser.cshtml"; }

@model IEnumerable<DACSN.Models.BaiViet>

<style type="text/css">
    .tintuc-img .thumbnail {
        padding-top: 10px;
        height: 100px;
        display: block;
    }

        .tintuc-img .thumbnail img {
            padding-top: 5px;
            height: 100%;
            display: block;
            padding-bottom: 10px;
            width: 20%;
        }

    .tintuc-img .News {
        padding-left: 120px;
    }

        .tintuc-img .News a {
            text-decoration: none
        }

    #test {
        width: 200px;
        height: 200px;
        overflow-x: hidden;
        overflow-y: auto;
    }
</style>



<div class="col-lg-12">
    <h3 class="tle1" style="color:darkblue"><img src="~/Image/TieuDe.png" style="height:25px;width:10px;" />&#160;<b>Tin Tức</b></h3>
    <div class="row">
        <div class="col-lg-9">
            @foreach (var tintuc in Model)
            {

<div class="tintuc-img">
    <div class="thumbnail">
        <img src="~/Image/@tintuc.Hinh" alt="@tintuc.TieuDe" />
        <div class="News">
            <div class="TieuDe">
                <a href="#">@tintuc.TieuDe</a>
            </div>
            <div class="NoiDung">
                <h3>@tintuc.NoiDung</h3>
            </div>
        </div>
    </div>
</div>            }
        </div>
        <div class="col-lg-3">
            <div class="row">
                <div class="col-lg-12 well">
                    <h3 class="tle1" style="color:darkblue"><img src="~/Image/TieuDe.png" style="height:25px;width:10px;" />&#160;<b>Diễn biến dịch</b></h3>
                    Hiển thị diễn biến dịch theo ngày
                </div>
                <div class="col-lg-12 well">
                    <h4><p style="text-align: center;font:bolder">Danh sách số điện thoại các bệnh viện</p></h4>
                    Hiển thị danh sách số điện thoại các bệnh viện
                </div>
            </div>
        </div>
    </div>
</div>
